#!/usr/bin/bash

CLOCK=$(date '+%I')

case "$CLOCK" in
	"00") ICON="ğŸ•›" ;;
	"01") ICON="ğŸ•" ;;
	"02") ICON="ğŸ•‘" ;;
	"03") ICON="ğŸ•’" ;;
	"04") ICON="ğŸ•“" ;;
	"05") ICON="ğŸ•”" ;;
	"06") ICON="ğŸ••" ;;
	"07") ICON="ğŸ•–" ;;
	"08") ICON="ğŸ•—" ;;
	"09") ICON="ğŸ•˜" ;;
	"10") ICON="ğŸ•™" ;;
	"11") ICON="ğŸ•š" ;;
	"12") ICON="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
	1) 
    notify "ï³ Calendar" "$(cal --color=always -n 2 | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" 
  ;;
esac

printf '%s %s\n' "$ICON" "$(date '+ %a %d %T ')" 
