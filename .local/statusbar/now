#!/usr/bin/sh

hour=$(date '+%I')

case "$hour" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

case "$BLOCK_BUTTON" in
  # Left click
	1) 
    cal2Months=$(cal --color=always -n 2 \
      | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/" \
    )

    doomst --title "ï³ Calendar" --message "$cal2Months"
  ;;
esac

day=$(date +%-e)

case $day in
  1?) day=${day}th ;;
  1|21|31) day=${day}st ;;
  2|22) day=${day}nd ;;
  3|23) day=${day}rd ;;
  *) day=${day}th ;;
esac

printf '%s %s\n' "$icon" "$(date "+$day %B %Y :: %T ")" 
