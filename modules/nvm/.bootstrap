#!/usr/bin/env zsh

###
# `nvm` module bootstraping script.
#
# Sourced with every terminal session, before `.init` and/or `.install`.
# Set common variables needed by both scripts.
###

export NVMM_HOME=$(dirname "$0")

export LOG_NAMESPACE="îœ˜ nvm"
export LOG_LEVEL=info

export NVMM_LOCAL="$NVMM_HOME/.local"
mkdir -p "$NVMM_LOCAL"

export NVMM_FUNCTIONS="$NVMM_HOME/functions"
export NVMM_CONFIG="$NVMM_HOME/config"
