stages:
  - prepare
  - code-analysis

.image:
  node-lts: node:18

.cache:
  node-modules: &NODE-MODEULES-CACHE
    key:
      prefix: node-modules
      files: [ package-lock.json ]
    paths: [ node_modules ]
    policy: pull
  node-modules-populate:
    <<: *NODE-MODEULES-CACHE
    policy: pull-push
  npm: &NPM-CACHE
    key:
      prefix: npm
      files: [ package-lock.json ]
    paths: [ .npm ]
    policy: pull
  npm-populate:
    <<: *NPM-CACHE
    policy: pull-push

